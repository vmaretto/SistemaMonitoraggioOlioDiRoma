# Database
DATABASE_URL="postgresql://user:password@localhost:5432/olio_monitoring"

# NextAuth.js
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:5000"

# === API PROVIDERS ===

# Awario (current provider)
AWARIO_API_KEY=your_awario_api_key_here
AWARIO_BASE_URL=https://api.awario.com/v1

# Webz.io
WEBZIO_TOKEN=your_webzio_token_here
WEBZIO_BASE_URL=https://api.webz.io/filterWebContent

# SerpApi (Google News + Reddit)
SERPAPI_KEY=your_serpapi_key_here
SERPAPI_BASE_URL=https://serpapi.com/search.json

# === MOCK MODE CONFIGURATION ===
# Set to '1' to use mock data when API keys are missing or for testing
# Set to '0' or remove to use real API calls

AWARIO_MOCK=1
WEBZIO_MOCK=1
SERPAPI_MOCK=1

# === AI ANALYSIS ===
# AbacusAI for sentiment analysis
ABACUSAI_API_KEY=your_abacusai_key_here

# === STORAGE CONFIGURATION ===
# Set to 'true' to use local storage, 'false' to use S3/cloud storage
USE_LOCAL_STORAGE=true
LOCAL_STORAGE_PATH=./uploads

# S3 Configuration (required if USE_LOCAL_STORAGE=false)
AWS_REGION=eu-west-1
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
S3_BUCKET_NAME=sistema-monitoraggio-olio
S3_ENDPOINT=https://s3.eu-west-1.amazonaws.com

# Alternative: Cloudflare R2
# S3_ENDPOINT=https://account-id.r2.cloudflarestorage.com

# Alternative: MinIO (self-hosted S3-compatible)
# S3_ENDPOINT=http://localhost:9000