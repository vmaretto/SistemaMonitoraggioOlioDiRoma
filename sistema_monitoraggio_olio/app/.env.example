# Database
DATABASE_URL="postgresql://user:password@localhost:5432/olio_monitoring"

# NextAuth.js
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:5000"

# === API PROVIDERS ===

# Awario (current provider)
AWARIO_API_KEY=your_awario_api_key_here
AWARIO_BASE_URL=https://api.awario.com/v1

# Webz.io
WEBZIO_TOKEN=your_webzio_token_here
WEBZIO_BASE_URL=https://api.webz.io/filterWebContent

# SerpApi (Google News + Reddit)
SERPAPI_KEY=your_serpapi_key_here
SERPAPI_BASE_URL=https://serpapi.com/search.json

# === MOCK MODE CONFIGURATION ===
